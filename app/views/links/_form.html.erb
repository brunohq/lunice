<%= simple_form_for @link, html: { class: 'form-horizontal' },
  wrapper: :horizontal_form do |f| %>
    <%= f.error_notification %>

    <%= f.input :url, placeholder: 'Enter URL', as: :string %>
    <%= f.input :slug, placeholder: 'Enter Slug', as: :string %>

    <%= f.button :submit, class: 'btn-primary btn-xl' %>
<% end %>