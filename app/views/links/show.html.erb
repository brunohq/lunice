<section id="link_data">
	<p>
	  <strong>Url:</strong>
	  <%= @link.url %>
	</p>
	 
	<p>
	  <strong>Slug:</strong>
	  <%= @link.slug %>
	</p>
</section>

<section id="visits_stats">
	<%= line_chart @stats, xtitle: "Date", ytitle: "Visits" %>
</section>

<section id="visits_list">
	<h2>Visits</h2>
	<table class="table">
	  <%= render @link.visits %>
	</table>
</section>




