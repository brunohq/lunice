<section id="link_data">
	<p>
	  <strong>Url:</strong>
	  <%= @link.url %>
	</p>
	 
	<p>
	  <strong>Slug:</strong>
	  <%= @link.slug %>
	</p>
</section>

<section id="visits_stats">
	<div class="row">
		<div class="col-md-6">
			<%= line_chart @stats, ytitle: "Visits" %>
		</div>
		<div class="col-md-6">
			<%= geo_chart @link.visits.unscoped.group(:city).count, library: {displayMode: "markers"} %>
		</div>
	</div>
</section>

<section id="visits_list">
	<h2>Visits</h2>
	<table class="table">
	  <%= render @link.visits %>
	</table>
</section>




