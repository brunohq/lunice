<h1>Listing links</h1>
 
<table class="table">
  <tr>
    <th>URL</th>
    <th>Slug</th>
    <th>Visits</th>
    <th>Last Visit</th>
    <th colspan="3"></th>
  </tr>
 
  <% @links.each do |link| %>
    <tr>
      <td><%= link.url %></td>
      <td><%= link.slug %></td>
      <td><%= link.visits_count %></td>
      <td><%= link.last_visit.created_at.to_s(:date_n_time) if link.last_visit %></td>
      <td><%= link_to 'Show', link_path(link) %></td>
      <td><%= link_to 'Edit', edit_link_path(link) %></td>
      <td><%= link_to 'Destroy', link_path(link),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'New Link', new_link_path, :class => "btn btn-primary btn-xl" %>